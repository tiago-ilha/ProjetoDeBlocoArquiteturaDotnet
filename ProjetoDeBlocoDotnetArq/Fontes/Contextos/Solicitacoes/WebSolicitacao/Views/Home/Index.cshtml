<!-- Modal Cadastro Conta Corrente -->
<div class="modal fade" id="ModalNovaContaCorrente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<form id="cadastroContaCorrente">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Informe os dados da solicitação</h4>
				</div>
				<div class="modal-body">
					<div class="alert alert-success" role="alert">...</div>
					<div class="alert alert-info" role="alert">...</div>
					<div class="alert alert-warning" role="alert">...</div>
					<div class="alert alert-danger" role="alert">...</div>
					<div class="form-group">
						<label for="inputCliente">Cliente</label>
						<input type="email" class="form-control" id="inputClienteCorrente" placeholder="Código, CPF ou CNPJ">
					</div>
					<div class="form-group">
						<label for="InputComprovanteResidencia">Comprovante de Residência</label>
						<input type="file" id="InputComprovanteResidencia">
						<p class="help-block">Anexe um documento tal com conta de luz, telefone, etc...</p>
					</div>
					<div class="form-group">
						<label for="InputComprovanteRenda">Comprovante de Renda</label>
						<input type="file" id="InputComprovanteRenda">
						<p class="help-block">Anexe documentos tal como contra-cheque de pelo menos até o penúltimo mês.</p>
					</div>
					<div class="checkbox">
						<label>
							<input type="radio" id="eletronica">Eletrônica
						</label>
					</div>					
					<div class="checkbox">
						<label>
							<input type="radio" id="salario">Salário
						</label>
					</div>					
					<div class="checkbox">
						<label>
							<input type="radio" id="especialEletronica">Especial Eletrônica
						</label>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save changes</button>
				</div>
			</form>
		</div>
	</div>
</div>

